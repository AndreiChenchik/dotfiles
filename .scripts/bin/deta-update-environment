#!/bin/bash

envFile="./.deta-env"

if [[ ! -z $DETA_ENVS ]]; then
  for envVar in $(echo $DETA_ENVS | sed "s/,/ /g")
  do
    envVarValue=${!envVar}
    echo "$envVar=$envVarValue" >> "${envFile}"
  done

  deta update -e "$envFile"
  rm "$envFile"
else
  echo "Don't know what to deploy"
  exit 1
fi
